<Page
    x:Class="MealTimePrep.SignOff"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MealTimePrep"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="MTPBadge" Source="Assets\MealTimePrepIcon.jpg" Margin="0,15,0,0"  Width="200" Height="200" VerticalAlignment="Top" HorizontalAlignment="Center"></Image>
        <StackPanel Margin="50,250,50,400">
            <TextBlock Text="You have been signed out." FontSize="30" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Button x:Name="returnHomeButton" Click="ReturnHomeButton_Clicked" Content="Return to log in screen." Background="Blue" Foreground="White" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</Page>
